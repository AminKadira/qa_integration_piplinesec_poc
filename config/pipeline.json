{
    "project": {
        "name": "spf-invoice-service",
        "version": "1.0.0"
    },
    "repositories": {
        "application": {
            "url": "http://localhost:3000/admin/spf.invoice.service",
            "branch": "main",
            "credentialsId": "git-credentials"
        },
        "tests": {
            "url": "http://localhost:3000/admin/spf-invoice-tests", 
            "branch": "main",
            "credentialsId": "git-credentials"
        }
    },
    "build": {
        "dotnet": {
            "version": "8.0",
            "configuration": "Release",
            "verbosity": "normal",
            "treatWarningsAsErrors": true,
            "runAnalyzers": true
        }
    },
    "tools": {
        "paths": {
            "sonarScanner": "C:\\tools\\sonar-scanner\\bin",
            "dotnet": "C:\\Program Files\\dotnet",
            "dependencyCheck": "/opt/dependency-check"
        }
    }
}